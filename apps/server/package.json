{
  "name": "@mdm/server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/start.ts --bundle --platform=node --format=cjs --outfile=dist/start.cjs",
    "check-types": "tsc --noEmit",
    "dev:build": "esbuild src/start.ts --bundle --platform=node --format=cjs --outfile=dist/start.cjs --watch",
    "dev:start": "nodemon dist/start.cjs",
    "dev": "concurrently -k -n BUILD,SERVER -c yellow,cyan \"npm run dev:build\" \"npm run dev:start\"",
    "lint": "eslint"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "type": "commonjs",
  "dependencies": {
    "express": "5.2.1",
    "morgan": "1.10.1"
  },
  "devDependencies": {
    "@mdm/typescript-config": "*",
    "@types/express": "5.0.6",
    "@types/morgan": "1.9.10",
    "@types/node": "25.0.3",
    "concurrently": "9.2.1",
    "nodemon": "3.1.11"
  }
}
