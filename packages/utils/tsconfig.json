{
  "extends": "@mdm/typescript-config/base.json",
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/**/__tests__/**"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "module": "esnext"
  }
}
